{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["index.ts", "../src/shared/types/**/*", "../src/shared/constants/**/*"],
  "exclude": ["node_modules", "dist", "../src/shared/stores/**/*", "../src/shared/config/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "..",
    "paths": {
      "@shared/*": ["../src/shared/*"]
    }
  }
} 